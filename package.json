{
  "name": "chain-scan",
  "type": "module",
  "scripts": {
    "env:all:save": "bws run --shell='bash' --project-id=\"${BWS_PROJECT_ID}\" -- \"BWS_ACCESS_TOKEN=\"$BWS_ACCESS_TOKEN\" bash ./scripts/bws/save.sh\"",
    "nix:update": "nix flake update",
    "nix:lock": "nix flake lock",
    "postinstall": "bun run --filter='@chain-scan/chains-flow' --filter='@chain-scan/chains-aptos' gen",
    "format": "prettier ./packages/apps/cli ./packages/libs --write",
    "lint": "eslint --debug ./packages/libs"
  },
  "devDependencies": {
    "@eslint/js": "9.21.0",
    "@types/bun": "latest",
    "eslint": "9.21.0",
    "prettier": "3.5.2",
    "typescript-eslint": "8.25.0"
  },
  "peerDependencies": {
    "typescript": "5.8.2"
  },
  "workspaces": [
    "packages/**/*"
  ]
}
