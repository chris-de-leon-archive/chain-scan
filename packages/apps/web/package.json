{
	"name": "web",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "bun --bun run vite dev --host 0.0.0.0",
		"build": "bun --bun run vite build",
		"preview": "bun --bun run vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"cache:wipe": "bun --env-file=.env -e \"const { rmSync } = require('fs'); rmSync(process.env.CACHE_URL, { force: true }); rmSync(process.env.CACHE_URL.concat('-lock'), { force: true })\"",
		"lmdb:clear": "bun --env-file=.env -e \"require('lmdb').open({ path: process.env.CACHE_URL }).clearSync()\" run",
		"lmdb:stats": "bun --env-file=.env -p \"JSON.stringify(require('lmdb').open({ path: process.env.CACHE_URL }).getStats(), null, 2)\" run",
		"lmdb:keys": "bun --env-file=.env -p \"JSON.stringify(require('lmdb').open({ path: process.env.CACHE_URL }).openDB(process.argv[2] ?? null, {}).getKeys().asArray, null, 2)\" run",
		"lmdb:size": "bun --env-file=.env -p \"require('lmdb').open({ path: process.env.CACHE_URL }).openDB(process.argv[2] ?? null, {}).getKeysCount()\" run",
    "env:dev:save": "infisical secrets set --env=dev --file=./.env --silent",
    "env:dev:pull": "infisical export --env=dev --silent > .env",
		"db:auth": "bun run --env-file=.env ../../../node_modules/@better-auth/cli/dist/index.mjs generate --y --config ./src/lib/server/providers/auth/index.ts --output ./src/lib/server/providers/db/schema/auth.schema.ts",
		"db:init": "bun run db:wipe && bun run db:auth && bun run db:push",
		"db:push": "drizzle-kit push --force",
		"db:wipe": "rm -f ./local.db",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio"
	},
	"dependencies": {
		"@chain-scan/chains-aptos": "workspace:",
		"@chain-scan/chains-eth": "workspace:",
		"@chain-scan/chains-flow": "workspace:",
		"@chain-scan/chains-solana": "workspace:",
		"@chain-scan/chains-starknet": "workspace:",
		"@chain-scan/chains-tron": "workspace:",
		"@chain-scan/cache-lmdb": "workspace:",
		"@skeletonlabs/skeleton": "3.0.0-next.12",
		"@skeletonlabs/skeleton-svelte": "1.0.0-next.21",
		"@tailwindcss/forms": "0.5.10",
		"better-auth": "1.2.3",
		"drizzle-orm": "0.40.0",
		"drizzle-zod": "0.7.0",
		"lucide-svelte": "0.477.0",
		"sveltekit-superforms": "2.23.1"
	},
	"devDependencies": {
		"@better-auth/cli": "1.2.3",
		"@eslint/compat": "1.2.7",
		"@eslint/js": "9.21.0",
		"@sveltejs/adapter-auto": "4.0.0",
		"@sveltejs/kit": "2.18.0",
		"@sveltejs/vite-plugin-svelte": "5.0.3",
		"@tailwindcss/vite": "4.0.11",
		"drizzle-kit": "0.30.5",
		"eslint": "9.21.0",
		"eslint-config-prettier": "10.0.2",
		"eslint-plugin-svelte": "3.0.3",
		"globals": "16.0.0",
		"prettier": "3.5.3",
		"prettier-plugin-svelte": "3.3.3",
		"prettier-plugin-tailwindcss": "0.6.11",
		"svelte": "5.22.5",
		"svelte-check": "4.1.5",
		"tailwindcss": "4.0.11",
		"typescript": "5.8.2",
		"typescript-eslint": "8.26.0",
		"vite": "6.2.0"
	}
}
